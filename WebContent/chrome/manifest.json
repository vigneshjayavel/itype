{
	"manifest_version": 2,
	"name": "Intelligent text predictor",
	"version": "1.0",
	"page_action": {
		"default_icon":{
			"19":"images/icon.png",
			"38":"images/icon.png"

			},
		"default_popup": "app.html"
	},
	"icons":{
		"128":"images/icon.png"
	},
	"background": {
		"scripts": ["libs/require.js", "events.js"],
		"persistent": false
	},

	"permissions": ["<all_urls>", "storage", "tabs"],

	"content_security_policy": "script-src 'self' https://connect.facebook.net 'unsafe-eval'; object-src 'self'"
}
